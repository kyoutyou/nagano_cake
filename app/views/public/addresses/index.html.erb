<div class="w-50 mx-auto">
  <h4>配送先登録/一覧</h4>
  <%= form_with model: @address,url: addresses_path,method: :post do |f| %>
    <h6>郵便番号(ハイフンなし)</h6>
      <%= f.text_field :postal_code %>
    <h6>住所</h6>
      <%= f.text_field :address %>
    <h6>宛名</h6>
      <%= f.text_field :name %>

    <div class="field"></div>
      <%= f.submit '新規登録' %>
  <% end %>
  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id) %></td>
          <td><%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>  </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>