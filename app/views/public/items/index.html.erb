<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="m-4">ジャンル検索</h2>
    </div>
    <div>
      <h3>商品一覧</h3>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div>
              <div>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image(100,100) %>
                <% end %>
              </div>
              <div><%= item.name %></div>
              <div><%= item.price %></div>
            </div>
          <% end %>
        </div>
    </div>
    </div>
  </div>
</div>