<div class="w-50 mx-auto">
  <h4>会員情報編集</h4>
    <%= form_with model: @public_customer,url:  customers_path do |f| %>
      <div>
        <div>
          氏名:<%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
        </div>
        <div>
          フリガナ:<%= f.text_field :first_name_kana %>
          <%= f.text_field :last_name_kana %>
        </div>
        <div>
          郵便番号:<%= f.text_field :postal_code %>
        </div>
        <div>
          住所:<%= f.text_field :address %>
        </div>
        <div>
          電話番号:<%= f.text_field :telephone_number %>
        </div>
        <div>
          メールアドレス:<%= f.text_field :email %>
        </div>
        <div class="m-5">
          <%= f.submit '編集内容を保存' %>
          <%= link_to "退会する", customers_withdraw_path %>
        </div>
      </div>
    <% end %>
</div>