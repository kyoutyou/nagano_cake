<div class="w-50 mx-auto ">
<h4>注文履歴詳細</h4>
  <table class="table tabli-hover table-inverse">
    <P class="font-weight-bold">注文情報</P>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.created_at %></td>
        <td><%= @order.shipping_address %></td>
        <td><%= @order.payment_method %></td>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>
  <table class="table tabli-hover table-inverse">
    <P class="font-weight-bold">請求情報</P>
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.total_payment %></td>
        <td><%= @order.shipping_cost %></td>
        <td><%= @order.shipping_cost + @order.total_payment %></td>
      </tr>
    </tbody>
  </table>
  <table class="table tabli-hover table-inverse">
    <P class="font-weight-bold">注文内容</P>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>