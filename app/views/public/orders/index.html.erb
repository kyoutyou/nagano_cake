<div class="w-50 mx-auto">
  <h4>注文履歴一覧</h4>
  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.shipping_address %></td>
        <td>
          <% order.order_details.each do |detaile| %>
            <%= detaile.item.name %>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する",order_path(order.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>