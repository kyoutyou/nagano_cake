<div class="w-50 mx-auto">
  <div class="d-flex text-black">
    <h4 class="p-3 w-100 ">ショッピングカート</h4>
    <h4 class="p-3 flex-shrink-0 "><%= link_to "カートを空にする", cart_item_path(@cart_items), method: :delete, "data-confirm" => "本当に削除しますか？" %></h4>
  </div>

  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= cart_item.item.name %></th>
        <th><%= cart_item.item.tax_price %></th>
        <th>
          <%= form_with model: @cart_item,url: cart_items_path, method: :post do |f| %>
          <%= f.select :cart_item,:amount, *[1..10] %>
          <% end %>
        </th>
        <th><%= cart_item.subtotal %></th>
        <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex text-black">
    <h6 class="p-3 w-100 "><%= link_to "買い物を続ける", root_path %></h6>
    <h6 class="p-3 flex-shrink-0 ">合計金額</h6>
  </div>
  <div class="text-center"><%= link_to "情報入力に進む", new_order_path %></div>

</div>