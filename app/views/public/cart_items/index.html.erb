<div class="w-50 mx-auto">
  <h4>ショッピングカート</h4>
  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= cart_item.item.name %></th>
        <th><%= cart_item.item.tax_price %></th>
        <th><%= cart_item.amount %></th>
        <th><%= cart_item.subtotal %></th>
        <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>