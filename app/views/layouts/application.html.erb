<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to root_path do %>
          <div class="navbar-brand" href="#">LOGO</div>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to customer_path(current_user) do %>
                <div class="nav-link">マイページ</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path do %>
                <div class="nav-link">商品一覧</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_items_path do %>
                <div class="nav-link">カート</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  destroy_customer_session_path, method: :delete do %>
                <div class="nav-link">ログアウト</div>
              <% end %>
            </li>

          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_items_path do %>
                <div class="nav-link">商品一覧</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_customers_path do %>
                <div class="nav-link">会員一覧</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_root_path do %>
                <div class="nav-link">注文履歴一覧</div>
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to admin_genres_path do %>
                <div class="nav-link">ジャンル一覧</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  destroy_admin_session_path, method: :delete do %>
                <div class="nav-link">ログアウト</div>
              <% end %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to about_path do %>
                <div class="nav-link">About</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path do %>
                <div class="nav-link">商品一覧</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_customer_registration_path do %>
                <div class="nav-link">新規登録</div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_customer_session_path do %>
                <div class="nav-link">ログイン</div>
              <% end %>
            </li>
          <% end %>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="footer"></footer>
  </body>
</html>
