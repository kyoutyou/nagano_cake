<div class="w-50 mx-auto">
  <h4>注文履歴一覧</h4>
   <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <%= link_to admin_order_path(@orders) do %>
          <td><%= order.created_at %></td>
        <% end %>
        <td><%= order.customer_id %></td>
        <td>
          <% sum=0 %>
          <% order.order_details.each do |detaile| %>
            <%= sum=sum+detaile.amount %>
          <% end %>
          <%= sum %>
        </td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>