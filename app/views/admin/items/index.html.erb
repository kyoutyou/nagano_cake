<div class="w-25 mx-auto">
  <h2>商品一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%=link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= genre_id %></td>
          <td><%= is_active %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>