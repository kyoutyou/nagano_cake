<div class="w-50 mx-auto">
  <h4>注文履歴詳細</h4>
    <div>
       <P>
        氏名
        <%= @order.shipping_name %>
      </P>
      <p>
        注文日
        <%= @order.created_at %>
      </p>
      <p>
        配送先
        <%= @order.shipping_address %>
      </p>
      <p>
        支払方法
        <%= @order.payment_method %>
      </p>
      <p>
        <%= form_with model: @order,url: admin_order_path(@order.id),method: :patch  do |f| %>
          <%= f.label :注文ステータス %>
          <%= f.select :status, options_from_collection_for_select(Order.all, :id, :status) %>
        <% end %>
        <% link_to '更新',admin_order_path(@order.id) %>
      </p>
    </div>


  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |detail| %>
      <tr>
        <td><%= detail.item.name %></td>
        <td><%= (detail.price*1.1).floor %></td>
        <td><%= detail.amount %></td>
        <td><%= detail.subtotal %></td>
        <td>
          <%= detail.making_status %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table tabli-hover table-inverse">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment - @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= @order.total_payment %></td>
    </tr>
  </table>
</div>