<div class="w-25 mx-auto">
  <h8>会員一覧</h8>
  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= customer.last_name %>
          <%= customer.first_name %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted %>
          有効
          <% else %>
          退会
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
</div>