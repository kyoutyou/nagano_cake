<div class="w-25 mx-auto">
  <h4>
    <%= @customer.first_name %>
    <%= @customer.last_name %>
    の会員詳細
  </h4>
  <table class="table tabli-hover table-inverse">
    <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= @customer.first_name %>
              <%= @customer.last_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= @customer.first_name_kana %>
              <%= @customer.last_name_kana %>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted %>
               有効
              <% else %>
              退会
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to '編集する',edit_admin_customer_path(@customer) %></td>
            <td><%= link_to '注文履歴一覧を見る',admin_root_path(@customer) %></td>
          </tr>
    </tbody>
  </table>
</div>